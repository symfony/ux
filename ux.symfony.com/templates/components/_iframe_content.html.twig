<html>
    <head>
        {% if css == 'tailwind' %}
            <link rel="stylesheet" href="{{ asset('styles/tailwind.css') }}">
        {% elseif css == 'bootstrap' %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
        {% endif %}

        {{ importmap() }}
    </head>
    <body class="p-6" data-turbo="false">
        {{ content|raw }}
    </body>
</html>
